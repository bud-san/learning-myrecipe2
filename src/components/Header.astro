---
const navItems = [
  { href: '/', label: 'トップ' },
  { href: '/recipes', label: 'レシピ一覧' },
]
---

<header class="border-b border-[#e6dddb] dark:border-[#3e2d2a] bg-white dark:bg-[#221310] sticky top-0 z-50">
  <div class="w-full max-w-[1200px] mx-auto px-4 md:px-8 py-3 flex items-center justify-between whitespace-nowrap">
    <a class="flex items-center gap-3 text-[#181211] dark:text-white" href="/">
      <div class="size-10 rounded-xl bg-primary/10 text-primary flex items-center justify-center">
        <span class="material-symbols-outlined text-3xl">restaurant_menu</span>
      </div>
      <span class="text-lg font-bold tracking-[-0.01em]">RecipeHub</span>
    </a>
    <nav class="flex items-center gap-4 text-sm font-medium text-[#896861] dark:text-[#a08d89]">
      {navItems.map((item) => (
        <a class="hover:text-primary transition-colors" href={item.href}>
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>
